# ==============================================================================
# .env.example - Template para configuração
# Copie este arquivo para .env e ajuste os valores para o seu ambiente
# ==============================================================================

# ============================================
# Database (PostgreSQL instalado na VPS)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dom360_db_sdk
DB_USER=postgres
DB_PASSWORD=sua_senha_postgres_segura

# ============================================
# Backend (FastAPI)
# ============================================
BACKEND_PORT=3001
BACKEND_BIND_HOST=0.0.0.0
BACKEND_BIND_PORT=3001
PUBLIC_BACKEND_URL=http://backend:3001
PYTHON_ENV=production

# ============================================
# Frontend (React + Vite)
# ============================================
PUBLIC_FRONTEND_URL=http://frontend:5173
VITE_API_URL=http://localhost:3001
NODE_ENV=production

# ============================================
# API & Security
# ============================================
AGENT_API_URL=http://localhost:8000
JWT_SECRET=gere_uma_chave_jwt_segura_aqui_com_32_caracteres_aleatorios

# ============================================
# CORS
# ============================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3001,http://frontend:5173,http://backend:3001

# ============================================
# Traefik (se usar reverse proxy com domínio)
# ============================================
TRAEFIK_DOMAIN=seu-dominio.com
TRAEFIK_ENTRYPOINT=websecure
TRAEFIK_CERTRESOLVER=letsencrypt
