# ==============================================================================
# DOM360 - Production Environment
# Para usar: cp .env.production .env (antes de fazer deploy)
# ==============================================================================

# ==============================================================================
# PostgreSQL Database
# ==============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=dom360_db_sdk
DB_USER=postgres
DB_PASSWORD=seu_senha_postgres_aqui

# ==============================================================================
# Backend API (FastAPI)
# ==============================================================================
BACKEND_PORT=3001
AGENT_API_URL=http://localhost:8000

# Back-end binding and public URL
BACKEND_BIND_HOST=0.0.0.0
BACKEND_BIND_PORT=3001
INTERNAL_BACKEND_HOST=0.0.0.0
INTERNAL_BACKEND_PORT=3001
PUBLIC_BACKEND_URL=http://api.seu-dominio.com.br
PUBLIC_BACKEND_HOST=api.seu-dominio.com.br

# ==============================================================================
# Frontend (React + Vite)
# ==============================================================================
VITE_API_URL=http://api.seu-dominio.com.br
VITE_TENANT_ID=1
VITE_INBOX_ID=1
VITE_USER_PHONE=+5511999998888
VITE_USER_NAME=Usuário

# Front-end binding and public URL
FRONTEND_BIND_HOST=0.0.0.0
FRONTEND_BIND_PORT=5173
INTERNAL_FRONTEND_HOST=0.0.0.0
INTERNAL_FRONTEND_PORT=5173
PUBLIC_FRONTEND_URL=http://seu-dominio.com.br
PUBLIC_FRONTEND_HOST=seu-dominio.com.br

# ==============================================================================
# Security
# ==============================================================================
JWT_SECRET=seu_jwt_secret_aqui
# Gerar com: openssl rand -base64 32

# ==============================================================================
# CORS - Configuração de Origens Permitidas
# ==============================================================================
CORS_ORIGINS=http://seu-dominio.com.br,http://api.seu-dominio.com.br,https://seu-dominio.com.br,https://api.seu-dominio.com.br

# ==============================================================================
# Environment
# ==============================================================================
NODE_ENV=production
PYTHON_ENV=production

# ==============================================================================
# PgAdmin (Opcional)
# ==============================================================================
PGADMIN_EMAIL=admin@seu-dominio.com.br
PGADMIN_PASSWORD=sua_senha_pgadmin_aqui
